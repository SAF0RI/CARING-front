#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔧 커밋 후 버전 증가 및 APK 빌드 시작..."

# 버전 증가 스크립트 실행
node scripts/increment-version.js

# APK 빌드 실행 (백그라운드로 실행 가능하지만, 여기서는 동기 실행)
npm run build:apk

# 변경된 버전 파일들을 다음 커밋에 포함시키기 위해 스테이징
git add app.json android/app/build.gradle

echo "✅ 버전 증가 및 빌드 완료!"
echo "💡 다음 커밋 시 증가된 버전이 포함됩니다."
